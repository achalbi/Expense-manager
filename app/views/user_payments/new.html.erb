<div class="panel panel-danger">
  <div class="panel-heading">Add User Payments</div>
  <div class="panel-body">
<%= form_for (@userpayment) do |f|%>
      <div class="form-group">
      <%= f.label :User %>
      <%=f.select 'user_id', options_for_select(@users.collect{ |u| [u.name, u.id] }),:class => 'form-control'%>
      </div>
    <div class="form-group">
      <%= f.label :Amount_paid %>
      <%= f.text_field  :amount_paid ,:class =>'form-control'%>
    </div>
    <div class="form-group">
      <%= f.label :Payment_gateway %>
      <%=f.select 'payment_mode_id', options_for_select(@paymentmodes.collect{ |u| [u.payment_gateway, u.id] }),:class => 'form-control'%>
     </div>
    <div class="form-group">
    <%= f.label :Comment %>
      <%= f.text_area  :comment ,:class => 'form-control',:id => 'comment' %>
      </div>
    <div class="form-group">
      <div class="container-fluid">
        <div class="row">
          <div class="col-sm-3" >

    <%= f.label :Date %>
      <%= f.text_field  :date ,:class => 'form-control',:id => 'user_payment_date'%>
    </div>
        </div>
      </div>
    </div>

      <button type="Pay" class="btn btn-success btn-cons">Pay</button>
      <%= link_to 'Cancel', user_payments_path, :class => "btn btn-danger btn-cons" %>
  <% end %>
  </div>
</div>
<script type="text/javascript">
    $(document).ready(function() {
        $("#user_payment_date").datepicker({dateFormat: "yy-mm-dd"});
    });
</script>